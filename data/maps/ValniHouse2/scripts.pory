script MintSalesman {
    lock
    faceplayer
    if(flag(FLAG_TEMP_A) == FALSE) {
        setflag(FLAG_TEMP_A)
        message("Oh, hey there.\p"
        "I sell mints that can change the stats\n"
        "of your pok√©mon.\p"
        "Do you wanna buy some?")
    }
    else {
        message("Do you wanna buy some mints?")
    }
    waitmessage
    pokemartdecoration2(ValniMintMart)
    msgbox("Come again!")
    release
}

